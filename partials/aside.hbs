<section class="sidebar-data-holder">
    <div class="spinner" role="spinner"><div class="spinner-icon"></div></div>
    <div class="logo"><a href="/" title="Back to home">{{@blog.title}}</a></div>                

    <!-- Author info -->
    {{#if post}}
        {{#post}}
            {{> author}}
        {{/post}}
    {{else}}
        {{#foreach posts}}
            {{#if @first}}
                {{> author}}
            {{/if}}
        {{/foreach}}
    {{/if}}

    <!-- Social media badges -->
    {{> social-media}}
    
    <footer id="main-footer"><p><a href="https://twitter.com/damianmuti" title="Go to @damianmuti's Twitter" rel="external">@damianmuti</a> designed this theme. Thanks Damian!</p></footer>
</section>
